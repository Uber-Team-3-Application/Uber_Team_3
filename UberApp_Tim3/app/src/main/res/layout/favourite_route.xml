<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/uber_off_white">

    <TextView
        android:id="@+id/tvFavouriteRouteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="@string/favourite_name"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/lyFromFavouriteRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:layout_marginHorizontal="10dp"
            android:textSize="14sp"
        />
        <TextView
            android:id="@+id/txtFromFavouriteRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulevar oslobodjenja 46"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>


</LinearLayout>